{
  "name": "@repo-wizard/desktop",
  "private": true,
  "version": "1.14.0",
  "type": "module",
  "scripts": {
    "dev": "cross-env RUST_BACKTRACE=1 RUST_LOG=repo_wizard=debug,info,tao=warn,wry=warn tauri dev --config src-tauri/tauri.dev.conf.json",
    "build": "cross-env RUST_BACKTRACE=1 tauri build",
    "tauri": "tauri",
    "web:dev": "vite",
    "web:build": "pnpm check:web && vite build",
    "web:serve": "vite preview",
    "check": "run-s -c check:web check:rust",
    "check:web": "run-s -c check:web:biome check:web:tsc",
    "check:web:biome": "biome check --write src/",
    "check:web:tsc": "tsc --noEmit",
    "check:rust": "cargo fmt --manifest-path src-tauri/Cargo.toml && cargo clippy --manifest-path src-tauri/Cargo.toml -- -D warnings",
    "lint": "run-s -c lint:web lint:rust",
    "lint:web": "run-s -c lint:web:biome lint:web:tsc",
    "lint:web:biome": "biome lint src/",
    "lint:web:tsc": "tsc --noEmit",
    "lint:rust": "cargo fmt --manifest-path src-tauri/Cargo.toml --check && cargo clippy --manifest-path src-tauri/Cargo.toml -- -D warnings"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@monaco-editor/react": "^4.7.0",
    "@tailwindcss/cli": "^4.1.11",
    "@tauri-apps/api": "^2.7.0",
    "@tauri-apps/plugin-cli": "~2.4.0",
    "@tauri-apps/plugin-clipboard-manager": "~2.2.3",
    "@tauri-apps/plugin-dialog": "~2.3.1",
    "@tauri-apps/plugin-fs": "~2.4.1",
    "@tauri-apps/plugin-http": "^2.5.1",
    "@tauri-apps/plugin-log": "~2.6.0",
    "@tauri-apps/plugin-os": "~2.3.0",
    "@tauri-apps/plugin-process": "~2.3.0",
    "@tauri-apps/plugin-shell": "~2.3.0",
    "@tauri-apps/plugin-store": "~2.3.0",
    "@tauri-apps/plugin-updater": "~2.9.0",
    "@xterm/addon-canvas": "^0.7.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.411.0",
    "material-icon-theme": "^5.29.0",
    "monaco-editor": "^0.50.0",
    "motion": "^12.23.6",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-resizable-panels": "^2.1.9",
    "react-terminal": "^1.4.5",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "catalog:",
    "uuid": "^11.1.0",
    "zod": "^4.1.12",
    "zundo": "^2.3.0",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@repo-wizard/typescript-config": "workspace:*",
    "@tailwindcss/vite": "^4.1.11",
    "@tauri-apps/cli": "^2.7.0",
    "@types/node": "catalog:",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "babel-plugin-react-compiler": "^1.0.0",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "typescript": "catalog:",
    "vite": "^5.4.19"
  }
}
